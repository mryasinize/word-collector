{
  "name": "memzer",
  "version": "1.0.0",
  "description": "This is a desktop application that helps to memorize the words that are stored in Google Sheet.",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.yasin.memzer",
    "productName": "Memzer",
    "win": {
      "target": "nsis",
      "icon": "./logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "./logo.ico",
      "uninstallerIcon": "./logo.ico",
      "uninstallDisplayName": "Memzer",
      "shortcutName": "Memzer"
    }
  },
  "author": "Yasin Ahmed",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.0.1",
    "electron-builder": "^24.9.1"
  }
}
